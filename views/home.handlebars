        <h3>
          <strong class="u-h2">{{id}}</strong>
          <hr class="c-line c-line--1 c-line--1/5">

          <p class="u-space-vert-2">{{meta.title}}</p>
        </h3>
        <textarea cols=100 rows=1><link rel="stylesheet" href="//cssmyass.glitch.me{{url}}{{params}}"></textarea>

